{
  "train_datasets": [
    {
      "name": "tgif_qa",
      "txt": "<path_to_dataset>/qa_Train.json",
      "img": "<path_to_dataset>/tgif_qa_video_feat.h5"
    }
  ],
  "val_datasets": [
    {
      "name": "tgif_qa",
      "txt": "<path_to_dataset>/qa_Train.json",
      "img": "<path_to_dataset>/tgif_qa_video_feat.h5"
    }
  ],
  "model": 
  {
    "txt_output_size": 512,
